<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="container" style ="padding-top: 5%;">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Edit Your Account</h1>
            <div class="account-wall">
                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                    alt="">
                <form class="form-signin">
                <%= f.email_field :email, autofocus: true,:class => "form-control",:placeholder => "Email",:style => " margin: 0 auto; margin-top: 40px; width: 80%; height: 45px;" %>
                <%= f.password_field :current_password, autocomplete: "off",:class => "form-control",:placeholder => "current_password",:style => " margin: 0 auto; width: 80%; height: 45px;"%>
                <%= f.password_field :password, autocomplete: "off",:class => "form-control",:placeholder => "Password (more 6)",:style => " margin: 0 auto; width: 80%; margin-top: 10px; height: 45px;" %>
                <%= f.password_field :password_confirmation, autocomplete: "off",:class => "form-control",:placeholder => "Password_confirmation",:style => " margin: 0 auto; width: 80%; height: 45px;" %>
                <%= f.text_field :nickname, autofocus: true,:class => "form-control",:placeholder => "name",:style => " margin: 0 auto; width: 80%; height: 45px;" %>
                <%= f.number_field :year, autofocus: true, min: "1", max: "5",:class => "form-control",:placeholder => "class",:style => " margin: 0 auto; width: 80%; height: 45px;" %>
                <%= f.number_field :group_id, autofocus: true, min: "1", max: "20",:class => "form-control",:placeholder => "group",:style => " margin: 0 auto; width: 80%; height: 45px;" %>
                <%= f.file_field :image, autofocus: true,:class => "form-control",:placeholder => "avator",:style => " margin: 0 auto; width: 80%; height: 45px;" %>
                <%= f.submit "update my account",:class => "btn btn-lg btn-primary btn-block",:style => " margin: 0 auto; margin-top: 30px; width: 80%;"%>

                <label class="checkbox pull-left">
                <% if devise_mapping.rememberable? -%>
                 <% end %>
                </label>
                </form>
<% end %>
            </div>
<h4 style ="margin-top: 30px;">delete my account</h4>

<%= button_to "delete my account", registration_path(resource_name),:class => "btn btn-lg btn-danger btn-block", data: { confirm: "정말로 삭제하겠습니까?" }, method: :delete, :style => "width: 80%; margin: 0 auto;" %>
        </div>
    </div>
</div>


