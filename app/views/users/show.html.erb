<div class="row" style="margin-left: 2%; margin-right: 2%;">

    <div id="services" class="col-lg-12">
            <h1 class="page-header">
            <a href="<%= @user.image.url %>" data-lightbox="任意の名前" data-title="<%= @user.nickname %>">
                <%= image_tag @user.image.url, :size => '70x70' %></a>　<%= @user.nickname %>의 통계(1주일)
            </h1>
    </div>

  <div class="col-md-12" style="margin-top: 30px;">

       <table class="table table-striped" style="text-align: center;">
            <tr><th>날자</th><th>우리 말</th><th>자학습</th><th>로작</th><th>일반</th><th>아침점검</th><th>저녁점검</th><th>아침모임</th><th>출석</th><th>정치학습</th><th>우리 말 학습</th><th>하루총화</th><th>학내청소</th><th>호실청소</th>
            <th></th>
            </tr>
                 <% @stats.each do |stat| %>
                         <tr ><td><%= stat.date %></td><td><%= stat.used_korean %></td><td><%= stat.study_time %></td><td><%= stat.korean_books %></td><td><%= stat.other_books %></td><td><%= stat.roll_calling %></td><td><%= stat.night_roll_calling %></td><td><%= stat.morning_meeting %></td><td><%= stat.attendance %></td><td><%= stat.politic_learning %></td><td><%= stat.korean_learning %></td><td><%= stat.reviewing %></td><td><%= stat.campus_cleaning %></td><td><%= stat.room_cleaning %></td>
                         <% if stat.user_id == current_user.id %>
                         <td><%= link_to "삭제", "/stats/#{stat.id}" ,method: :delete, data: { confirm: "이 통계를 삭제하겠습니까?" }%></td>
                        <% else %>
                        <td></td>
                         <% end %>
                         </tr>
                 <% end %>
       </table>

  </div>
</div>